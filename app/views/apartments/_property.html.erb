<%= form_for(:apartment, :html => {:class => 'form-horizontal'}) do |f| %>
<%# this form is a placeholder for the apartment, when things like bedrooms, bathrooms, price need to be set%>
	  <div class='form-group form-group-lg'>
	    <label for='inputImage1' class='col-lg-2 control-label'>Image 1</label>
	    <div class='col-lg-10'>        	
	      <%= f.file_field :image1, :id => 'inputImage1', :class => 'form-control' %>
      	  <% if @apartment.address != nil and @apartment.image1? %>
      		<p style="border-style:solid; border-color:LightGray; border-width:thin;">  
      			<%= image_tag @apartment.image1(:thumb) %>
      			<%= label_tag(:image_delete1, "Delete existing image?") %>  
      			<%= check_box_tag(:image_delete1) %>
      		</p> 
    	  <% end %>
	    </div>
	  </div>
	  <div class='form-group form-group-lg'>
	    <label for='inputImage2' class='col-lg-2 control-label'>Image 2</label>
	    <div class='col-lg-10'>
	      <%= f.file_field :image2, :id => 'inputImage2', :class => 'form-control' %>
	      <% if @apartment.address != nil and @apartment.image2? %>
      		<p style="border-style:solid; border-color:Gainsboro; border-width:thin;">  
      			<%= image_tag @apartment.image2(:thumb) %> 
      			<%= label_tag(:image_delete2, "Delete existing image?") %>  
      			<%= check_box_tag(:image_delete2) %>
      		</p> 
    	  <% end %>
	    </div>
	  </div>
	  <div class='form-group form-group-lg'>
	    <label for='inputImage3' class='col-lg-2 control-label'>Image 3</label>
	    <div class='col-lg-10'>
	      <%= f.file_field :image3, :id => 'inputImage3', :class => 'form-control' %>
	      <% if @apartment.address != nil and @apartment.image3? %>
      		<p style="border-style:solid; border-color:Cornsilk; border-width:thin;"> 
      			<%= image_tag @apartment.image3(:thumb) %> 
      			<%= label_tag(:image_delete3, "Delete existing image?") %>  
      			<%= check_box_tag(:image_delete3) %>
      		</p> 
    	  <% end %>
	    </div>
	  </div>
	  <div class='form-group form-group-lg'>
	    <label for='rooms' class='col-lg-2 control-label'>Rooms</label>
	    <div class='col-lg-10'>
	    	<%= number_field(:apartment, :rooms, in: 0..10, step: 1, :id => 'rooms', :class => 'form-control') %>
	    </div>
	  </div>
	  <div class='form-group form-group-lg'>
	    <label for='fullBathroom' class='col-lg-2 control-label'>Full bathrooms</label>
	    <div class='col-lg-10'>
	    	<%= number_field(:apartment, :full_bathroom, in: 0..10, step: 1, :id => 'fullBathroom', :class => 'form-control') %>
	    </div>
	  </div>
	  <div class='form-group form-group-lg'>
	    <label for='halfBathroom' class='col-lg-2 control-label'>Half bathrooms</label>
	    <div class='col-lg-10'>
	    	<%= number_field(:apartment, :half_bathroom, in: 0..10, step: 1, :id => 'halfBathroom', :class => 'form-control') %>
	    </div>
	  </div>

	  <div class='form-group form-group-lg'>
	    <label for='inputImage3' class='col-lg-2 control-label'>Application Form</label>
	    <div class='col-lg-10'>
	      <%= f.file_field :image3, :id => 'inputImage3', :class => 'form-control' %>
	      <% if @apartment.address != nil and @apartment.image3? %>
      		<p style="border-style:solid; border-color:Cornsilk; border-width:thin;"> 
      			<%= image_tag @apartment.image3(:thumb) %> 
      			<%= label_tag(:image_delete3, "Delete existing image?") %>  
      			<%= check_box_tag(:image_delete3) %>
      		</p> 
    	  <% end %>
	    </div>
	  </div>

      <div class='container'>
        <div class='row'>
          <div class='col-lg-12'>
            <%= f.submit "Save Property", class: "btn btn-success btn-submit btn-lg btn-block" %>
          </div>
        </div>
      </div>
      <div class='container'>
        <div class='row'>
          <div class='col-lg-12'>
            <%= link_to "Cancel", profile_manage_properties_path, class: "btn btn-danger btn-submit btn-lg btn-block" %>
          </div>
        </div>
      </div>
      <p> <br> </p>
<% end %>