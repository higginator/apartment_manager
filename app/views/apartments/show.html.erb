<div class='container'>
    <div class='row'>
       <div class='text-center col-lg-12'>
          <% if @apartment.address.line2? %>
            <h1><%= @apartment.address.line1 + ', ' + @apartment.address.line2 %></h1>
          <% else %>
            <h1><%= @apartment.address.line1 %></h1> 
          <% end %>
          <% if @apartment.address.city? and @apartment.address.state? %>
            <h1><%= @apartment.address.city + ', ' + @apartment.address.state + ' ' + @apartment.address.zip %></h1>
          <% else %>
          	<h1><%= @apartment.address.city + @apartment.address.state + ' ' + @apartment.address.zip %></h1> 
          <% end %>
      </div>

      <% if !@user or !@user.landlord? %>
        <div class='row'>
          <div class='col-lg-3 col-md-3 col-sm-3 col-xs-3'></div>
          <div class='col-lg-6 col-md-6 col-sm-6 col-xs-6 text-center'>
            <%= link_to "Apply", application_apartment_path(@apartment.id), :class => 'btn btn-success btn-lg btn-block', :role => 'button' %>
          </div> 
          <div class='col-lg-3 col-md-3 col-sm-3 col-xs-3'></div>
        </div>
      <% end %>

        <div class='text-center col-lg-12'>
        	<% if @apartment.address != nil and @apartment.image1? %>
        		<%= image_tag @apartment.image1(:medium) %>
        	<% end %>	
        </div>
        <div class='text-center col-lg-12'>
        	<% if @apartment.address != nil and @apartment.image2? %>
        		<%= image_tag @apartment.image2(:medium) %>
        	<% end %>
        </div>
        <div class='text-center col-lg-12'>
        	<% if @apartment.address != nil and @apartment.image3? %>
        		<%= image_tag @apartment.image3(:medium) %>
        	<% end %>
        </div>
    </div>
</div>

<% if @user %>
  <% if @user.apartments.include? @apartment %>
<div class='container'>
    <div class='row'>
      <div class='col-lg-3 col-md-3 col-sm-3 col-xs-3'></div>
      <div class='col-lg-3 col-md-3 col-sm-3 col-xs-3 text-center'>
        <%= link_to "Destroy", destroy_apartment_path(@apartment.id), method: :delete, :class => 'btn btn-danger btn-lg btn-block', :role => 'button' %>
      </div>
      <div class='col-lg-3 col-md-3 col-sm-3 col-xs-3 text-center'>
        <%= link_to "Edit", update_address_path(@apartment.id), :class => 'btn btn-success btn-lg btn-block', :role => 'button' %>
      </div>
      <div class='col-lg-3 col-md-3 col-sm-3 col-xs-3'></div>
    </div>
</div>
  <% end %>
<% end %>