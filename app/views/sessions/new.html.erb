<div class="login">
	<div class="container">
		<div class="form">

	    <div class='container'>
	  	  <div class='row'>
	  	  	<div class='text-center col-lg-12 col-md-12 col-sm-12 col-xs-12'>
		      <h1>Welcome Back</h1>
		    </div>
		  </div>
	    </div>
			
			<%= form_for(:session, url: login_path, :html => {:class => 'form-horizontal'}) do |f| %> 
			  <div class='form-group form-group-lg'>
			  	<label for='inputEmail' class='col-lg-2 col-md-2 col-sm-2 col-xs-2 control-label'>Email</label>
			  	<div class='col-lg-10 col-md-10 col-sm-10 col-xs-10'>
			  		<%= f.email_field :email, :class => 'form-control', :id => 'inputEmail', :placeholder => "Email" %> 
			  	</div>
			  </div>
			  <div class='form-group form-group-lg'>
			  	<label for='inputPassword' class='col-lg-2 col-md-2 col-sm-2 col-xs-2 control-label'>Password</label>
			  	<div class='col-lg-10 col-md-10 col-sm-10 col-xs-10'>
			      <%= f.password_field :password, :class => 'form-control', :id => 'inputPassword', :placeholder => "Password" %> 
			  	</div>
			  </div>
			  <div class='container'>
			  	<div class='row'>
			  		<div class='col-lg-12 col-md-12 col-sm-12 col-xs-12'>
					  <%= f.submit "Log in", class: "btn btn-success btn-lg btn-block btn-submit" %>
					</div>
				</div>
			</div>
			<% end %>
		
    </div>
	</div>
</div>