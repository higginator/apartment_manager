<div class='container'>
    <div class='row'>
       <div class='text-center col-lg-12'>
         <h1>Manage Properties</h1>
        </div>
    </div>
</div>

<div class="apartmentss">
  <div class="container">

    <div class="row">
      <% @user.apartments.each do |apartment| %> 
        <div class="item col-md-4">
          <div class="apartment-info">
            <% if apartment.address.line2? %>
              <h2><%= apartment.address.line1 + ' ' + apartment.address.line2 %></h2>
            <% else %>
              <h2><%= apartment.address.line1 %></h2> 
            <% end %> 
            <p><%= link_to "See Apartment", apartment_path(apartment)  %></p>
          </div>
        </div>
      <% end %> 
    </div>

  </div>
</div>


<div class='container'>
    <div class='row'>
      <div class='col-lg-3 col-md-3 col-sm-3 col-xs-3'></div>
      <div class='col-lg-6 col-md-6 col-sm-6 col-xs-6 text-center'>
        <%= link_to "Add Property", apartments_new_path, :class => 'btn btn-default btn-lg btn-block', :role => 'button' %>
      </div>
      <div class='col-lg-3 col-md-3 col-sm-3 col-xs-3'></div>
    </div>
 </div>